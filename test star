using System;
usingSystem.Collections.Generic;
usingSystem.Linq;
usingSystem.Text;
usingSystem.Threading.Tasks;

namespace ConsoleApplication1
{
class Program
    {
static void Main(string[] args)
        {
Console.WriteLine("enter a number:");
int n = Convert.ToInt32(Console.ReadLine());
for (inti = 1; i<= n; i++)
            {
for (int x = i; x <= n; x++)
                {
Console.Write(" ");
                }
for (int j = 1; j <= i; j++)
                {
Console.Write("*" + " ");
                }
Console.WriteLine();
            }
Console.ReadLine();
        }
    }
}

